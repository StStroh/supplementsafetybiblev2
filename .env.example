# Supabase Frontend Configuration (VITE_ prefix exposes to browser)
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Backend Configuration (for Netlify Functions - set in Netlify Dashboard)
# NEVER expose service role key to frontend - it bypasses RLS
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# Stripe Frontend Configuration (VITE_ prefix exposes to browser)
# These are SAFE to expose - they are publishable/public identifiers
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
VITE_STRIPE_PRICE_PRO=price_your_pro_monthly_price_id
VITE_STRIPE_PRICE_PRO_ANNUAL=price_your_pro_annual_price_id
VITE_STRIPE_PRICE_PREMIUM=price_your_premium_monthly_price_id
VITE_STRIPE_PRICE_PREMIUM_ANNUAL=price_your_premium_annual_price_id

# Stripe Backend Configuration (for Netlify Functions - set in Netlify Dashboard)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_PRO=price_your_pro_monthly_price_id
STRIPE_PRICE_PREMIUM=price_your_premium_monthly_price_id
CHECKOUT_SUCCESS_URL=https://supplementsafetybible.com/billing/success?session_id={CHECKOUT_SESSION_ID}
CHECKOUT_CANCEL_URL=https://supplementsafetybible.com/pricing?canceled=true

# SMTP Configuration (for Netlify Functions - set in Netlify Dashboard)
# Used for custom email sending and testing SMTP connectivity
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM_NAME="SafetyBible"
SMTP_FROM_EMAIL="support@safetybible.com"

# Site URL Configuration (VITE_ prefix exposes to browser)
# Used for auth redirects - set to your production domain
VITE_SITE_URL="https://safetybible.com"

# Feature Flags (for Netlify Functions - set in Netlify Dashboard)
DEFAULT_TIER=starter
ENABLE_FREE_TIER=true
ENABLE_STRIPE=true
ENABLE_TRIALS=true
TRIAL_DAYS_PRO=14
TRIAL_DAYS_PREMIUM=14

# Floating Starter Signup Feature (VITE_ prefix exposes to browser)
VITE_ENABLE_FLOATING_STARTER=true
VITE_FLOATING_STARTER_VARIANT=A
VITE_FLOATING_STARTER_SCROLL_THRESHOLD=0.18

# Authentication Feature Flags (VITE_ prefix exposes to browser)
# Control which authentication methods are available to users
VITE_AUTH_ENABLE_MAGIC_LINK=true
VITE_AUTH_ENABLE_PASSWORD=true

# Pricing A/B Test Flags (VITE_ prefix exposes to browser)
# Control pricing page behavior for safe A/B testing
VITE_ENABLE_ANNUAL_TOGGLE=true
VITE_ENABLE_FIRST_MONTH_ANCHOR=false
VITE_FIRST_MONTH_PRICE_PRO=9.99
VITE_FIRST_MONTH_PRICE_PREMIUM=9.99
VITE_STRIPE_COUPON_FIRST_MONTH_PRO=
VITE_STRIPE_COUPON_FIRST_MONTH_PREMIUM=

# Admin Access Control (VITE_ prefix exposes to browser)
# Optional password gate for admin/leads page - leave empty to disable
VITE_ADMIN_PASSWORD=
