# Supabase Frontend Configuration (VITE_ prefix exposes to browser)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Backend Configuration (for Netlify Functions - set in Netlify Dashboard)
# NEVER expose service role key to frontend
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Frontend Configuration (VITE_ prefix exposes to browser)
# These are SAFE to expose - they are publishable/public identifiers
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
VITE_STRIPE_PRICE_PRO=price_your_pro_monthly_price_id
VITE_STRIPE_PRICE_PRO_ANNUAL=price_your_pro_annual_price_id
VITE_STRIPE_PRICE_PREMIUM=price_your_premium_monthly_price_id
VITE_STRIPE_PRICE_PREMIUM_ANNUAL=price_your_premium_annual_price_id

# Stripe Backend Configuration (for Netlify Functions - set in Netlify Dashboard)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SMTP Configuration (for Netlify Functions - set in Netlify Dashboard)
# Used for custom email sending and testing SMTP connectivity
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM_NAME="Supplement Safety Bible"
SMTP_FROM_EMAIL="support@supplementsafetybible.com"
